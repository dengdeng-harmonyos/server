{
  "info": {
    "name": "Dangdangdang Push Server API",
    "description": "华为Push Kit v3推送服务API测试集合",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "device_key",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Device Management",
      "item": [
        {
          "name": "Register Device",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('device_key', jsonData.device_key);",
                  "    console.log('Device Key saved:', jsonData.device_key);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"push_token\": \"test_push_token_12345678\",\n    \"device_type\": \"phone\",\n    \"os_version\": \"HarmonyOS 5.0\",\n    \"app_version\": \"1.0.0\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/device/register",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "device", "register"]
            }
          }
        },
        {
          "name": "Update Push Token",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"device_key\": \"{{device_key}}\",\n    \"new_push_token\": \"new_token_value\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/device/update-token",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "device", "update-token"]
            }
          }
        },
        {
          "name": "Deactivate Device",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/device/deactivate?device_key={{device_key}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "device", "deactivate"],
              "query": [
                {
                  "key": "device_key",
                  "value": "{{device_key}}"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Push Notifications",
      "item": [
        {
          "name": "Send Notification",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/push/notification?device_key={{device_key}}&title=测试消息&body=这是一条测试推送&data={\"order_id\":\"12345\"}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "push", "notification"],
              "query": [
                {
                  "key": "device_key",
                  "value": "{{device_key}}"
                },
                {
                  "key": "title",
                  "value": "测试消息"
                },
                {
                  "key": "body",
                  "value": "这是一条测试推送"
                },
                {
                  "key": "data",
                  "value": "{\"order_id\":\"12345\"}"
                }
              ]
            }
          }
        },
        {
          "name": "Send Form Update",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/push/form?device_key={{device_key}}&form_id=weather_card&form_data={\"temperature\":\"25°C\",\"weather\":\"晴天\"}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "push", "form"],
              "query": [
                {
                  "key": "device_key",
                  "value": "{{device_key}}"
                },
                {
                  "key": "form_id",
                  "value": "weather_card"
                },
                {
                  "key": "form_data",
                  "value": "{\"temperature\":\"25°C\",\"weather\":\"晴天\"}"
                }
              ]
            }
          }
        },
        {
          "name": "Send Background Message",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/push/background?device_key={{device_key}}&data={\"action\":\"sync\",\"timestamp\":\"2026-01-13T10:00:00Z\"}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "push", "background"],
              "query": [
                {
                  "key": "device_key",
                  "value": "{{device_key}}"
                },
                {
                  "key": "data",
                  "value": "{\"action\":\"sync\",\"timestamp\":\"2026-01-13T10:00:00Z\"}"
                }
              ]
            }
          }
        },
        {
          "name": "Send Batch Notification",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/push/batch?device_keys=key1,key2,key3&title=批量通知&body=这是批量推送消息",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "push", "batch"],
              "query": [
                {
                  "key": "device_keys",
                  "value": "key1,key2,key3"
                },
                {
                  "key": "title",
                  "value": "批量通知"
                },
                {
                  "key": "body",
                  "value": "这是批量推送消息"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Statistics",
      "item": [
        {
          "name": "Get Push Statistics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/push/statistics?date=2026-01-13",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "push", "statistics"],
              "query": [
                {
                  "key": "date",
                  "value": "2026-01-13"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
